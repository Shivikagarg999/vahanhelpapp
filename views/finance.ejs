<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance - VAHAN HELP</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            color: #2c3e50;
        }

        table {
            width: 80%;
            margin: 40px auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        } 
                                
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #2c3e50;
            color: #fff;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr td:nth-child(1) {
            font-weight: bold;
            width: 30%;
        }

        ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        ul li {
            padding: 2px 0;
        }

        .separator-row {
            background-color: #e6e6e6;
            height: 10px;
        }

        a {
            background-color: #333;
            color: white;
            font-weight: bold;
            border-radius: 12px;
            padding: 8px 10px;
            font-size: large;
            text-decoration: none;
        }    

        a:hover {
            text-decoration: none;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            flex-wrap: wrap;
            gap: 10px;
        }

        .search-form {
            display: flex;
            align-items: center;
            border: 2px solid #333;
            border-radius: 5px;
            overflow: hidden;
        }

        .search-input {
            padding: 10px;
            font-size: 16px;
            border: none;
            outline: none;
            min-width: 200px;
            flex: 1;
        }

        .search-button {
            background-color: #333;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 16px;
        }

        .search-button i {
            margin-right: 8px;
        }

        .search-button:hover {
            background-color: #141313;
        }

        .search-input::placeholder {
            color: #aaa;
            font-style: italic;
        }

        .edit-status-btn {
            background-color: #333;
            color: white;
            padding: 3px 6px;
            margin: 5px;
        }

        .bill-dropdown {
            padding: 5px 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            background-color: #fff;
        }
        .btnn{
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .bg {
            color: #333;
        }

        #bgf {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        .bill-dropdown:focus {
            border-color: #2196F3;
        }

        .bgg {
            color: green;
        }

        .brr {
            color: red;
        }

        /* Responsive Styling */
        @media (max-width: 768px) {
            table {
                width: 90%;
                font-size: 14px;
            }

            th, td {
                padding: 8px;
            }

            .search-input {
                width: 100%;
            }

            .search-button {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            table {
                font-size: 12px;
            }

            th, td {
                padding: 6px;
            }

            .search-input, .search-button {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>      
    <h1>Finance</h1>
    <div class="search-bar">
        <form action="/fsearch" method="GET" class="search-form">
            <input 
                type="text" 
                name="carNum" 
                placeholder="Search by Car Number" 
                required 
                class="search-input"
            >
            <button type="submit" class="search-button">
                <i class="fas fa-search"></i> Search
            </button>
        </form>
    </div>
    <div class="btnn">
    <a href="/finance-task-download">Download</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Field</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
                <tr>
                    <td>Car Number</td>
                    <td>
                        <span data-field="carNum" data-id="<%= task._id %>">
                            <%= task.carNum %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Client Name</td>
                    <td>
                        <span data-field="clientName" data-id="<%= task._id %>">
                            <%= task.clientName %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Case Type</td>
                    <td>
                        <span data-field="caseType" data-id="<%= task._id %>">
                            <%= task.caseType %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Task type</td>
                    <td>
                        <span data-field="name" data-id="<%= task._id %>">
                            <%= task.name %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Additional work</td>
                    <td>
                        <span data-field="AdditionalWork" data-id="<%= task._id %>">
                            <%= task.AdditionalWork %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Buyer RTO</td>
                    <td>
                        <span data-field="buyer_RTO_location" data-id="<%= task._id %>">
                            <%= task.buyer_RTO_location %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Seller RTO</td>
                    <td>
                        <span data-field="seller_RTO_location" data-id="<%= task._id %>">
                            <%= task.seller_RTO_location %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Seller side agent</td>
                    <td>
                        <span data-field="task1agentname" data-id="<%= task._id %>">
                            <%= task.task1agentname %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Buyer side agent</td>
                    <td>
                        <span data-field="task2agentname" data-id="<%= task._id %>">
                            <%= task.task2agentname %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Cost</td>
                    <td>
                        <table>
                            <% if (task.cost && Object.keys(task.cost).length > 0) { %>
                                <% Object.entries(task.cost).forEach(([key, value]) => { %>
                                    <tr>
                                        <td><%= key %></td>
                                        <td>
                                            <span class="editable" data-field="cost_<%= key %>" data-id="<%= task._id %>">
                                                <%= value?.value || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="editable" data-field="cost_<%= key %>_party" data-id="<%= task._id %>">
                                                <%= value?.party || "Not specified" %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="3">No cost data available</td></tr>
                            <% } %>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>Sale</td>
                    <td>
                        <table>
                            <% if (task.sale && Object.keys(task.sale).length > 0) { %>
                                <% Object.entries(task.sale).forEach(([key, value]) => { %>
                                    <tr>
                                        <td><%= key %></td>
                                        <td>
                                            <span class="editable" data-field="sale_<%= key %>" data-id="<%= task._id %>">
                                                <%= value?.value || 0 %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="2">No sale data available</td></tr>
                            <% } %>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>Seller Side Total Cost</td>
                    <td>
                        <span class="seller-total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => {
                                return task.cost[field]?.party === "seller" ? total + (task.cost[field]?.value || 0) : total;
                            }, 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Buyer Side Total Cost</td>
                    <td>
                        <span class="buyer-total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => {
                                return task.cost[field]?.party === "buyer" ? total + (task.cost[field]?.value || 0) : total;
                            }, 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Cost</td>
                    <td>
                        <span class="total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => total + (task.cost[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Sale</td>
                    <td>
                        <span class="total-sale" data-id="<%= task._id %>">
                            <%= Object.keys(task.sale || {}).reduce((total, field) => total + (task.sale[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Difference</td>
                    <td>
                        <span class="total-difference" data-id="<%= task._id %>">
                            <%= Object.keys(task.sale || {}).reduce((totalSale, field) => totalSale + (task.sale[field]?.value || 0), 0) 
                                - Object.keys(task.cost || {}).reduce((totalCost, field) => totalCost + (task.cost[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
              
                <tr class="bg">
                    <td>Bill Generated</td>
                    <td>
                        <span data-field="billGenerated" data-id="<%= task._id %>">
                            <% if (task.billGenerated) { %>
                                <span class="bgg" id="status-text-<%= task._id %>">Generated</span>
                            <% } else { %>
                                <span class="brr" id="status-text-<%= task._id %>">Not Generated</span>
                            <% } %>
                        </span>
                        <button class="edit-status-btn" data-id="<%= task._id %>">
                            Change
                        </button>
                    </td>
                </tr>
                
                <tr class="bg">
                    <td>Actions</td>
                    <td>
                        <a href="/financeEdit/<%= task._id %>" class="edit-button">Assign Cost</a>
                    </td>
                </tr>       
            <% }) %> 
        </tbody> 
    </table>
    <script>
        document.querySelectorAll('.edit-status-btn').forEach(button => {
        button.addEventListener('click', async (event) => {
        const taskId = event.target.getAttribute('data-id');
        const statusText = document.querySelector(`#status-text-${taskId}`);
        
        // Determine the new status
        const newStatus = statusText.textContent === "Generated" ? false : true;
        
        // Update the UI
        statusText.textContent = newStatus ? "Generated" : "Not Generated";
        
        // Update the backend via API (Example: Fetch API)
        try {
            const response = await fetch(`/update-bill-status/${taskId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ billGenerated: newStatus }),
            });
            
            if (!response.ok) {
                throw new Error('Failed to update status');
            }
        } catch (error) {
            alert('Error updating status: ' + error.message);
            // Revert UI change on failure
            statusText.textContent = !newStatus ? "Generated" : "Not Generated";
        }
    });
});

    </script>
</body>
</html>