<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance - VAHAN HELP</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            color: #2c3e50;
        }

        table {
            width: 80%;
            margin: 40px auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #2c3e50;
            color: #fff;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr td:nth-child(1) {
            font-weight: bold;
            width: 30%;
        }

        ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        ul li {
            padding: 2px 0;
        }

        .separator-row {
            background-color: #e6e6e6;
            height: 10px;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>      
    <h1>Finance</h1>
    <table>
        <thead>
            <tr>
                <th>Field</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
                <tr>
                    <td>Car Number</td>
                    <td>
                        <span data-field="carNum" data-id="<%= task._id %>">
                            <%= task.carNum %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Client Name</td>
                    <td>
                        <span data-field="clientName" data-id="<%= task._id %>">
                            <%= task.clientName %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Buyer RTO</td>
                    <td>
                        <span data-field="clientName" data-id="<%= task._id %>">
                            <%= task.buyer_RTO_location %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Seller RTO</td>
                    <td>
                        <span data-field="clientName" data-id="<%= task._id %>">
                            <%= task.seller_RTO_location %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Cost</td>
                    <td>
                        <table>
                            <% if (task.cost) { %>
                                <% Object.keys(task.cost).forEach(field => { %>
                                    <tr>
                                        <td><%= field %></td>
                                        <td>
                                            <span class="editable" data-field="cost_<%= field %>" data-id="<%= task._id %>">
                                                <%= task.cost[field]?.value || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="editable" data-field="cost_<%= field %>_party" data-id="<%= task._id %>">
                                                <%= task.cost[field]?.party || "Not specified" %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <p>No cost data available</p>
                            <% } %>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>Sale</td>
                    <td>
                        <table>
                            <% if (task.cost) { %>
                                <% Object.keys(task.cost).forEach(field => { %>
                                    <tr>
                                        <td><%= field %></td>
                                        <td>
                                            <span class="editable" data-field="cost_<%= field %>" data-id="<%= task._id %>">
                                                <%= task.sale[field]?.value || 0 %>
                                            </span>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <p>No cost data available</p>
                            <% } %>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>Seller Side Total Cost</td>
                    <td>
                        <span class="seller-total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => {
                                return task.cost[field]?.party === "seller" ? total + (task.cost[field]?.value || 0) : total;
                            }, 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Buyer Side Total Cost</td>
                    <td>
                        <span class="buyer-total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => {
                                return task.cost[field]?.party === "buyer" ? total + (task.cost[field]?.value || 0) : total;
                            }, 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Cost</td>
                    <td>
                        <span class="total-cost" data-id="<%= task._id %>">
                            <%= Object.keys(task.cost || {}).reduce((total, field) => total + (task.cost[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Sale</td>
                    <td>
                        <span class="total-sale" data-id="<%= task._id %>">
                            <%= Object.keys(task.sale || {}).reduce((total, field) => total + (task.sale[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Total Difference</td>
                    <td>
                        <span class="total-difference" data-id="<%= task._id %>">
                            <%= Object.keys(task.sale || {}).reduce((totalSale, field) => totalSale + (task.sale[field]?.value || 0), 0) 
                                - Object.keys(task.cost || {}).reduce((totalCost, field) => totalCost + (task.cost[field]?.value || 0), 0) %>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Actions</td>
                    <td>
                        <a href="/financeEdit/<%= task._id %>" class="edit-button">Assign Cost</a>
                    </td>
                </tr>                
            <% }) %>
        </tbody>
    </table>
</body>
</html>