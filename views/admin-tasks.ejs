<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Tasks</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Open Sans", sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
            margin: 20px 0;
        }
        a {
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            color: #0056b3;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .task-card {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .task-card h2 {
            margin-top: 0;
            font-size: 22px;
            color: #333;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }
        .task-details {
            display: grid;
            grid-template-columns: 1fr 2fr;
            column-gap: 20px;
            row-gap: 15px;
            margin: 10px 0;
        }
        .task-details div {
            display: flex;
            align-items: center;
        }
        .task-details div strong {
            min-width: 150px;
            font-weight: 600;
            color: #555;
        }
        .task-details div a {
            text-decoration: none;
            color: #007bff;
            margin-left: 10px;
        }
        .task-details div a:hover {
            color: #0056b3;
        }
        .task-details div img {
            max-width: 100px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-left: 10px;
        }
        .task-actions {
            margin-top: 20px;
        }
        .task-actions a, .task-actions button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
            font-size: 14px;
            margin-right: 10px;
            text-decoration: none;
        }
        .task-actions button:hover, .task-actions a:hover {
            background-color: #0056b3;
        }
        .logout {
            color: red;
            font-weight: bold;
            display: inline-block;
            margin-bottom: 20px;
        }

        /* RESPONSIVE DESIGN */
        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }
            .task-details {
                grid-template-columns: 1fr;
                row-gap: 10px;
                column-gap: 0;
            }
            .task-actions a, .task-actions button {
                padding: 8px 12px;
                font-size: 12px;
                margin-right: 5px;
            }
            .task-details div strong {
                min-width: 120px;
            }
        }

        @media (max-width: 480px) {
            .task-card {
                padding: 15px;
            }
            h1 {
                font-size: 24px;
            }
            .task-details div strong {
                min-width: 100px;
            }
            .task-actions a, .task-actions button {
                padding: 6px 10px;
                font-size: 12px;
                margin-right: 5px;
            }
            .task-details div img {
                max-width: 80px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>All Tasks</h1>
        <a href="/admin/logout" class="logout">Logout</a>

        <% tasks.forEach(task => { %>
            <div class="task-card">
                <h2><%= task.name %> - <%= task.company ? task.company.companyName : 'No Company Assigned' %></h2>
                <div class="task-details">
                    <div><strong>Description:</strong> <%= task.description %></div>
                    <div><strong>Car Number:</strong> <%= task.carNum %></div>
                    <div><strong>Client Name:</strong> <%= task.clientName %></div>
                    <div><strong>Case Type:</strong> <%= task.caseType %></div>
                    <div><strong>HPT Name:</strong> <%= task.hptName %></div>
                    <div><strong>Seller Aligned Date:</strong> <%= task.sellerAlignedDate ? task.sellerAlignedDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>Buyer Aligned Date:</strong> <%= task.buyerAlignedDate ? task.buyerAlignedDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>NOC Issued Date:</strong> <%= task.NOCissuedDate ? task.NOCissuedDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>NOC Received Date:</strong> <%= task.NOCreceivedDate ? task.NOCreceivedDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>File Received Date:</strong> <%= task.fileReceivedDate ? task.fileReceivedDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>Additional Work:</strong> <%= task.AdditionalWork %></div>
                    <div><strong>HPA:</strong> <%= task.HPA %></div>
                    <div><strong>Transfer Date:</strong> <%= task.transferDate ? task.transferDate.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>Handover Date (RC):</strong> <%= task.HandoverDate_RC ? task.HandoverDate_RC.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>Handover Date (NOC):</strong> <%= task.HandoverDate_NOC ? task.HandoverDate_NOC.toISOString().split('T')[0] : 'N/A' %></div>
                    <div><strong>Buyer Name:</strong> <%= task.buyerName %></div>
                    <div><strong>Buyer Number:</strong> <%= task.buyerNum %></div>
                    <div><strong>Seller Name:</strong> <%= task.sellerName %></div>
                    <div><strong>Seller Number:</strong> <%= task.sellerNum %></div>
                    <div><strong>Buyer RTO Location:</strong> <%= task.buyer_RTO_location %></div>
                    <div><strong>Seller RTO Location:</strong> <%= task.seller_RTO_location %></div>
                    <div><strong>Status:</strong> <%= task.state ? 'Completed' : 'Pending' %></div>
                    <div>
                        <strong>Seller Photo:</strong> 
                        <a href="<%= task.sellerPhoto %>" target="_blank">
                            <img src="<%= task.sellerPhoto %>" alt="Seller Photo" />
                        </a>
                    </div>
                    <div>
                        <strong>Buyer Photo:</strong> 
                        <a href="<%= task.buyerPhoto %>" target="_blank">
                            <img src="<%= task.buyerPhoto %>" alt="Buyer Photo" />
                        </a>
                    </div>
                    <div>
                        <strong>Seller Docs:</strong> 
                        <a href="<%= task.sellerDocs %>" target="_blank"><%= task.sellerDocs ? 'View Seller Docs' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Buyer Docs:</strong> 
                        <a href="<%= task.buyerDocs %>" target="_blank"><%= task.buyerDocs ? 'View Buyer Docs' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Car Video:</strong> 
                        <a href="<%= task.carVideo %>" target="_blank"><%= task.carVideo ? 'View Car Video' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Seller Video:</strong> 
                        <a href="<%= task.sellerVideo %>" target="_blank"><%= task.sellerVideo ? 'View Seller Video' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Care Of Video:</strong> 
                        <a href="<%= task.careOfVideo %>" target="_blank"><%= task.careOfVideo ? 'View Care Of Video' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>NOC Receipt:</strong> 
                        <a href="<%= task.nocReceipt %>" target="_blank"><%= task.nocReceipt ? 'View NOC Receipt' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Transfer Receipt:</strong> 
                        <a href="<%= task.transferReceipt %>" target="_blank"><%= task.transferReceipt ? 'View Transfer Receipt' : 'N/A' %></a>
                    </div>
                    <div>
                        <strong>Created At:</strong> 
                        <%= task.createdAt.toISOString().split('T')[0] %>
                    </div>
                </div>
                <div class="task-actions">
                    <a href="/admin/tasks/edit/<%= task._id %>">Edit</a>
                    <form action="/admin/tasks/delete/<%= task._id %>" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </div>  
            </div>
        <% }) %>

        <a href="/registerar" class="btn">Register</a>
    </div>
</body>
</html>
