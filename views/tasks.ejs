<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Tasks</title>
    <style>
        body {
            font-family: 'Roboto', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 900px;
            width: 90%;
            background-color: #fff;
            padding: 20px;
            margin: 30px auto;
            border-radius: 12px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1, h2 {
            text-align: center;
            color: #333;
            margin-top: 0;
        }
        form {
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }
        input, textarea, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #0056b3;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        a {
            color: #007bff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .btn-primary {
            display: block;
            background-color: #28a745;
            text-align: center;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            border-radius: 6px;
            margin-top: 15px;
        }
        /* Responsive design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            table, thead, tbody, th, td, tr {
                display: block;
            }
            tr {
                margin-bottom: 10px;
                border-bottom: 1px solid #ddd;
            }
            td {
                display: flex;
                justify-content: space-between;
                padding: 10px;
                text-align: left;
                position: relative;
            }
            td::before {
                content: attr(data-label);
                font-weight: bold;
                flex: 1;
            }
            th {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create New Task</h2>
        <form action="/tasks" method="POST">
            <div class="form-group">
                <label for="taskType">Task Type:</label>
                <select name="name" id="taskType" required>
                    <option value="Seller PP">Seller PP</option>
                    <option value="Buyer PP">Buyer PP</option>
                    <option value="Car Seen">Car Seen</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea name="description" id="description" required></textarea>
            </div>
            <div class="form-group">
                <label for="carNum">Car Number:</label>
                <input type="text" name="carNum" id="carNum" required>
            </div>
            <button type="submit">Create Task</button>
        </form>

        <h2>Import Tasks via CSV</h2>
        <form action="/tasks/import" method="post" enctype="multipart/form-data">
            <input type="file" name="csvFile" required>
            <button type="submit">Upload CSV</button>
        </form>
        
        <hr>
        <h2>Search Tasks By Car Name</h2>
        <form action="/tasks/search" method="get" style="display: flex; align-items: center; margin-bottom: 20px;">
            <div class="form-group" style="flex-grow: 1;">
                <input type="text" id="searchCarNum" name="carNum" placeholder="Enter car number" required>
            </div>
            <button type="submit" style="background: none; border: none; cursor: pointer;">
                <img src="https://img.icons8.com/ios-filled/50/007bff/search.png" alt="Search" style="width: 24px; height: 24px;">
            </button>
        </form>

        <h1>Your Tasks</h1>
        <% if (tasks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Car Number</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach(task => { %>
                        <tr>
                            <td data-label="Name"><%= task.name %></td>
                            <td data-label="Description"><%= task.description %></td>
                            <td data-label="Car Number"><%= task.carNum %></td>
                            <td data-label="Status"><%= task.state ? 'Completed' : 'Pending' %></td>
                            <td data-label="Actions">
                                <a href="/tasks/edit/<%= task._id %>" title="Edit">
                                    <img src="https://img.icons8.com/ios-filled/24/007bff/edit.png" alt="Edit">
                                </a>
                                <form action="/tasks/delete/<%= task._id %>" method="post" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this task?');" title="Delete" style="background: none; border: none;">
                                        <img src="https://img.icons8.com/ios-filled/24/ff0000/trash.png" alt="Delete">
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No tasks found.</p>
        <% } %>

        <a href="/tasks/download" class="btn-primary">Download Tasks as CSV</a>
        <a href="/logout" style="display: block; text-align: center; margin-top: 20px;">Logout</a>
    </div>
</body>
</html>
