<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Tasks</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 800px;
            width: 100%;
            background: #fff;
            padding: 20px;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
            color: #333;
            margin-top: 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .actions {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
        }
        button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            margin: 5px;
        }
        button:hover {
            background-color: #0056b3;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-group input, .form-group textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            table {
                display: block;
                overflow-x: auto;
            }
            th, td {
                white-space: nowrap;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 10px;
                border-radius: 4px;
                box-shadow: none;
            }
            /* Stacking table on small screens */
            table, thead, tbody, th, td, tr {
                display: block;
            }
            tr {
                margin-bottom: 10px;
                border-bottom: 1px solid #ddd;
            }
            td {
                display: flex;
                justify-content: space-between;
                padding: 10px;
                text-align: left;
                border: none;
                position: relative;
            }
            td::before {
                content: attr(data-label);
                flex: 1;
                font-weight: bold;
                text-align: left;
            }
            td:last-child {
                text-align: right;
            }
            th {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Your Tasks</h1>

        <!-- Task Creation Form -->
        <h2>Create New Task</h2>
        <form action="/tasks" method="post">
            <div class="form-group">
                <label for="name">Task Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="carNum">Car Number:</label>
                <input type="text" id="carNum" name="carNum" required>
            </div>
            <button type="submit">Add Task</button>
        </form>
        <h2>Import Tasks from CSV</h2>
        <form action="/tasks/import" method="post" enctype="multipart/form-data">
            <input type="file" name="csvFile" accept=".csv" required>
            <button type="submit">Import CSV</button>
        </form>
        <!-- Task List -->
        <% if (tasks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Car Number</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach(task => { %>
                        <tr>
                            <td data-label="Name"><%= task.name %></td>
                            <td data-label="Description"><%= task.description %></td>
                            <td data-label="Car Number"><%= task.carNum %></td>
                            <td data-label="Status"><%= task.state ? 'Completed' : 'Pending' %></td>
                            <td data-label="Actions">
                                <!-- Edit Task Form -->
                                <a href="/tasks/edit/<%= task._id %>">
                                    <button type="button">Edit</button>
                                </a>
                                <!-- Delete Task Form -->
                                <form action="/tasks/delete/<%= task._id %>" method="post" style="display:inline;">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No tasks found.</p>
        <% } %>

        <a href="/logout" style="display: block; text-align: center; margin-top: 20px; color: #007bff;">Logout</a>
    </div>
</body>
</html>
